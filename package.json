{
  "name": "marketplace-demo",
  "private": true,
  "workspaces": [
    "api",
    "host",
    "ui"
  ],
  "scripts": {
    "dev": "bun --filter '*' dev",
    "dev:api": "bun --filter api dev",
    "dev:host": "bun --filter host dev",
    "dev:ui": "bun --filter ui dev",
    "build": "bun --filter '*' build",
    "build:api": "bun --filter api build",
    "build:host": "bun --filter host build",
    "build:ui": "bun --filter ui build",
    "deploy": "bun --filter ui build && bun --filter api build",
    "start": "bun run --filter host preview",
    "check-types": "bun --filter '*' check-types",
    "db:push": "bun --filter host db:push",
    "db:studio": "bun --filter host db:studio",
    "db:generate": "bun --filter host db:generate",
    "db:migrate": "bun --filter host db:migrate"
  },
  "dependencies": {},
  "devDependencies": {},
  "packageManager": "bun@1.2.20"
}
